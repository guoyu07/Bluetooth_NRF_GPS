<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/get_back_sex"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/left" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="你的性别是？"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/boy_logo_image"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/boy_logo"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="158dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/line" />

    <ImageButton
        android:id="@+id/girl_logo_image"
        android:layout_width="115dp"
        android:layout_height="110dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/girl_logo_black" />

    <Button
        android:id="@+id/next_step_sex"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/train_stop"
        android:text="下一步"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sexshow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/next_step_sex"
        android:layout_alignLeft="@+id/next_step_sex"
        android:layout_marginBottom="77dp"
        android:layout_marginLeft="7dp"
        android:text="男"
        android:textColor="@color/black"
        android:textSize="50sp" />

</RelativeLayout>