<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="重置密码"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/blue_gre"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:hint="请输入您的手机号"
        android:textColor="@color/litter_grew"/>
    <EditText
        android:id="@+id/check_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="110dp"
        android:hint="请输入验证码"
        android:textColor="@color/litter_grew"/>
    <Button
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="获取验证码"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/check_num"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/blue_gre"
        android:onClick="reset_pwd_onClick"/>
    <EditText
        android:id="@+id/enter_password_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:hint="请输入密码,必填"
        android:textColor="@color/litter_grew"/>
    <EditText
        android:id="@+id/enter_password_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="245dp"
        android:hint="请输入密码,必填"
        android:textColor="@color/litter_grew"/>
    <Button
        android:id="@+id/confirm_modify"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="确认修改"
        android:layout_below="@+id/enter_password_2"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/blue_gre"
        android:onClick="reset_pwd_onClick"/>
    <ImageView
        android:id="@+id/btn_return_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/return_left"
        android:onClick="reset_pwd_onClick"
        />
</RelativeLayout>