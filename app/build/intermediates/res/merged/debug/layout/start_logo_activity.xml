<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/start_logo">

    <LinearLayout
        android:id="@+id/start_ll_button" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
	
		<Button
		    android:id="@+id/start_btn_join_sporta"
		    android:layout_width="130dp"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:text="加入SPORTA"
		    android:textSize="18sp" 
		    android:visibility="invisible"/>
        
		<Button
		    android:id="@+id/start_btn_login"
		    android:layout_width="130dp"
		    android:layout_height="wrap_content"
		    android:text="登录" 
		    android:textSize="18sp" 
		    android:layout_marginBottom="15dp"
		    android:visibility="invisible"/>
		
<!-- 		 <TextView 
	        android:layout_width="wrap_content"
	        android:text="@string/app_version"
	        android:gravity="center"
	        android:layout_marginBottom="10dp"
	        android:layout_height="30dp"/> -->
		
    </LinearLayout>

    <Button
        android:id="@+id/btn_to_ble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_ll_button"
        android:layout_alignLeft="@+id/start_ll_button"
        android:layout_alignRight="@+id/start_ll_button"
        android:text="JUST FOR TEST" />
    
</RelativeLayout>
